---
import iconSvg from '$assets/icons/social.svg?url';

const items: Array<{ title: string; icon: string; href: string }> = [
	{
		title: '@sidvishnoi on GitHub',
		icon: 'icon-github',
		href: 'https://github.com/sidvishnoi',
	},
	{
		title: '@sidvishnoi on Mastodon.social',
		icon: 'icon-mastodon',
		href: 'https://mastodon.social/@sidvishnoi',
	},
	{
		title: '@sudhanshu-vishnoi on LinkedIn',
		icon: 'icon-linkedin',
		href: 'https://linkedin.com/in/sudhanshu-vishnoi',
	},
	{
		title: '@sid-vishnoi on StackOverflow',
		icon: 'icon-stackoverflow',
		href: 'https://stackoverflow.com/users/1607105/sid-vishnoi',
	},
	{
		title: '@sidvishnoi on Dev.to',
		icon: 'icon-dev',
		href: 'https://dev.to/sidvishnoi',
	},
	{
		title: '@sidvishnoi on CodePen',
		icon: 'icon-codepen',
		href: 'https://codepen.io/sidvishnoi/',
	},
];
---

<nav class="social">
	<ul>
		{
			items.map((item) => (
				<li>
					<a rel="me" title={item.title} href={item.href} class={item.icon}>
						<span class="visually-hidden">{item.title}</span>
						<svg width="24" height="24" aria-hidden="true">
							<use xlink:href={`${iconSvg}#${item.icon}`} />
						</svg>
					</a>
				</li>
			))
		}
	</ul>
</nav>

<style>
	.social ul {
		display: grid;
		grid-template-columns: repeat(6, max-content);
		grid-gap: 0.5rem;
		gap: 0.5rem;
		justify-content: end;
		overflow-x: auto;
	}
	.social ul li {
		list-style: none;
		margin: 0;
	}
	.social a {
		padding: 0.5em;
		display: flex;
		justify-content: center;
		align-content: center;
		background: var(--background);
		border: 4px solid var(--icon-color);
		border-radius: 50%;
		transition: background-color 0.2s cubic-bezier(0.165, 0.84, 0.44, 1);
	}
	html[data-theme='dark'] .social a {
		border-color: var(--color-light);
	}
	.social a svg {
		width: 24px;
		height: 24px;
		fill: var(--color);
	}
	.social a:hover,
	.social a:focus {
		background-color: var(--icon-color);
	}
	.social a:hover svg,
	.social a:focus svg {
		fill: var(--icon-fill, #000);
	}
	.social a.icon-twitter {
		--icon-color: #1ca2f2;
	}
	.social a.icon-mastodon {
		--icon-color: #6364ff;
		--icon-fill: #fff;
	}
	.social a.icon-github {
		--icon-color: #000;
		--icon-fill: #fff;
	}
	.social a.icon-dev {
		--icon-color: #4e57ef;
		--icon-fill: #fff;
	}
	.social a.icon-stackoverflow {
		--icon-color: #f48024;
	}
	.social a.icon-linkedin {
		--icon-color: #0084bf;
		--icon-fill: #fff;
	}
	.social a.icon-codepen {
		--icon-color: #fcd000;
	}

	@media (max-width: 640px) {
		.social {
			justify-content: center;
		}
		.social a {
			border-width: 2px;
		}
		.social a svg {
			width: 16px;
			height: 16px;
		}
	}
</style>
