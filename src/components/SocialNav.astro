---
import iconSvg from '$assets/icons/social.svg?url';
---

<nav class="social">
	<a
		rel="me"
		title="@sidvishnoi on Github"
		href="https://github.com/sidvishnoi"
		class="icon-github"
	>
		<span class="visually-hidden">@sidvishnoi on Github</span>
		<svg width="24" aria-hidden="true"
			><use xlink:href={`${iconSvg}#icon-github`}></use></svg
		>
	</a>
	<a
		rel="me"
		title="@sidvishnoi on Mastodon.social"
		href="https://mastodon.social/@sidvishnoi"
		class="icon-mastodon"
	>
		<span class="visually-hidden">@sidvishnoi on Mastodon.social</span>
		<svg width="24" aria-hidden="true"
			><use xlink:href={`${iconSvg}#icon-mastodon`}></use></svg
		>
	</a>
	<a
		rel="me"
		title="@sudhanshu-vishnoi on Linkedin"
		href="https://linkedin.com/in/sudhanshu-vishnoi"
		class="icon-linkedin"
	>
		<span class="visually-hidden">@sudhanshu-vishnoi on Linkedin</span>
		<svg width="24" aria-hidden="true"
			><use xlink:href={`${iconSvg}#icon-linkedin`}></use></svg
		>
	</a>
	<a
		rel="me"
		title="@sidvishnoi on Dev.to"
		href="https://dev.to/sidvishnoi"
		class="icon-dev"
	>
		<span class="visually-hidden">@sidvishnoi on Dev.to</span>
		<svg width="24" aria-hidden="true"
			><use xlink:href={`${iconSvg}#icon-dev`}></use></svg
		>
	</a>
	<a
		rel="me"
		title="@sid-vishnoi on StackOverflow"
		href="https://stackoverflow.com/users/3367669/sid-vishnoi"
		class="icon-stackoverflow"
	>
		<span class="visually-hidden">@sid-vishnoi on StackOverflow</span>
		<svg width="24" aria-hidden="true"
			><use xlink:href={`${iconSvg}#icon-stackoverflow`}></use></svg
		>
	</a>
	<a
		rel="me"
		title="@sidvishnoi on CodePen"
		href="https://codepen.io/sidvishnoi/"
		class="icon-codepen"
	>
		<span class="visually-hidden">@sidvishnoi on CodePen</span>
		<svg width="24" aria-hidden="true"
			><use xlink:href={`${iconSvg}#icon-codepen`}></use></svg
		>
	</a>
</nav>

<style>
	.social {
		display: grid;
		grid-template-columns: repeat(6, max-content);
		grid-gap: 0.5rem;
		gap: 0.5rem;
		justify-content: end;
		overflow-x: auto;
	}
	.social a {
		padding: 0.5em;
		display: flex;
		justify-content: center;
		align-content: center;
		background: var(--background);
		border: 4px solid var(--icon-color);
		border-radius: 50%;
		transition: background-color 0.2s cubic-bezier(0.165, 0.84, 0.44, 1);
	}
	html[data-theme='dark'] .social a {
		border-color: var(--color-light);
	}
	.social a svg {
		width: 24px;
		height: 24px;
		fill: var(--color);
	}
	.social a:hover,
	.social a:focus {
		background-color: var(--icon-color);
	}
	.social a:hover svg,
	.social a:focus svg {
		fill: var(--icon-fill, #000);
	}
	.social a.icon-twitter {
		--icon-color: #1ca2f2;
	}
	.social a.icon-mastodon {
		--icon-color: #6364ff;
		--icon-fill: #fff;
	}
	.social a.icon-github {
		--icon-color: #000;
		--icon-fill: #fff;
	}
	.social a.icon-dev {
		--icon-color: #4e57ef;
		--icon-fill: #fff;
	}
	.social a.icon-stackoverflow {
		--icon-color: #f48024;
	}
	.social a.icon-linkedin {
		--icon-color: #0084bf;
		--icon-fill: #fff;
	}
	.social a.icon-codepen {
		--icon-color: #fcd000;
	}

	@media (max-width: 640px) {
		.social {
			justify-content: center;
		}
		.social a {
			border-width: 2px;
		}
		.social a svg {
			width: 16px;
			height: 16px;
		}
	}
</style>
