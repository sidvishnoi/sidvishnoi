---
import HomeLayout from '$layouts/HomeLayout.astro';
import Header from '$components/Header.astro';

import { Content } from './_about.md';
---

<HomeLayout
	title="About — Sid Vishnoi — Independent software engineer, full-stack developer"
	meta={{
		description: `I'm Sid, a passionate software engineer and full-stack web developer with a knack for front-end development.`,
	}}
>
	<Header subtitle="About" hideNav />
	<Content />
</HomeLayout>

<style is:global>
	main {
		max-width: calc(100% - 2 * var(--border-thickness));
		margin: 0 auto;
		padding: 0 1em 1em;
	}

	p {
		max-width: 65ch;
		margin: auto;
	}

	p + p {
		margin-top: 1em;
	}

	br {
		display: block;
		margin-top: 0.3em;
	}

	hr {
		margin: 2em auto;
		border: 2px solid var(--color-c, aquagreen);
		border-radius: 10px;
		max-width: 60%;
	}

	main .social {
		margin-top: 2em;
		justify-content: center !important;
	}
</style>
